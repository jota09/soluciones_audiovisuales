<form id="form_actividad" enctype="multipart/form-data" method="POST" onsubmit="return false">
   <div class="modal fade" id="nuevo_actividad" tabindex="" role="dialog" aria-labelledby="myModalLabel">    
      <div class="modal-dialog modal-lg" role="document">
         <div class="modal-content">
            <div class="modal-header">
               <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
               <h4 class="modal-title" id="myModalLabel">{$L_APP.lbl_actividad_crear} <span class="tipo_actividad"></span></h4>
            </div>
            <div class="modal-body">
               {if condition="$modulo == 'cuentas' "}
                  <div class="col-sm-6 ">
                     <div class="form-group">
                        <label class="control-label col-sm-3" for="tipo">{$L_APP.lbl_nombre_comercial}</label>
                        <div class="col-sm-9"> 
                           <label style="font-size: 15px; margin-top: 2px;">{$registro.nombre_comercial}</label>
                        </div>
                     </div>
                  </div>
                  <div class="col-sm-6 ">
                     <div class="form-group">
                        <label class="control-label col-sm-3" for="tipo">{$L_APP.lbl_descripcion_estado}</label>
                        <div class="col-sm-9"> 
                           {loop name="$listasM.estado"}
                           {if condition="$registro.estado_id == $value.id"}
                              <label style="font-size: 15px; margin-top: 2px;">{$value.nombre}</label>
                           {/if}
                           {/loop}
                        </div>
                     </div>
                  </div>
               {/if}

               <div class="col-sm-6">
                  <div class="form-group">
                     <label class="control-label col-sm-3" for="nombre">{$L_APP.lbl_actividad_nombre}</label>
                     <div class="col-sm-9">                    
                        <input type="text" class="form-control" value="" id="referencia_actividad" name="referencia_actividad">

                     </div>
                  </div>
               </div>
               <div class="col-sm-6 ">
                  <div class="form-group">
                     <label class="control-label col-sm-3">{$L_APP.lbl_actividad_tipo}</label>
                     <div class="col-sm-9"> 
                        <input class="sel_parent" type="hidden" id="tipo_actividad" name="tipo_actividad" data-child="sel_parent_estado" value="">
                        <span class="tipo_actividad"></span>
                     </div>
                  </div>
               </div>
               <div class="clearfix"></div>
               <div class="col-sm-6 ">
                  <div class="form-group">
                     <label class="control-label col-sm-3">{$L_APP.lbl_actividad_fecha_inicio}</label>
                     <div class="col-sm-9"> 
                        <input type="date" class="form-control validate[required] fecha" value="{$registro.fecha_inicio}" id="fecha_inicio_actividad" name="fecha_inicio_actividad" >
                     </div>
                  </div>
                  <div class="form-group">
                     <div class="clearfix"></div>
                     <label class="control-label col-sm-3"></label>

                     <div class="col-sm-3">                    
                        <select class="form-control validate[required]" id="fecha_incio_hora_actividad" name="fecha_inicio_hora_actividad">
                           <option value=""></option>
                           {loop name="$horas"}
                           <option value="{$value.hora}">{$value.hora}</option>
                           {/loop}
                        </select>
                     </div>
                     <div class="col-sm-3">                    
                        <select class="form-control validate[required]" id="fecha_incio_minutos_actividad" name="fecha_inicio_minutos_actividad">
                           <option value=""></option>
                           {loop name="$minutos"}
                           <option value="{$value.minutos}" >{$value.minutos}</option>
                           {/loop}
                        </select>
                     </div>
                     <div class="col-sm-3">                    

                        <select class="form-control validate[required]"id="fecha_inicio_am_actividad " name="fecha_inicio_am_actividad" >
                           <option value=""></option>
                           <option value="AM">AM</option>
                           <option value="PM" >PM</option>
                        </select>
                     </div>
                  </div>
               </div>
               <div class="col-sm-6 ">
                  <div class="form-group">
                     <label class="control-label col-sm-3">{$L_APP.lbl_actividad_fecha_fin}</label>
                     <div class="col-sm-9"> 
                        <input type="date" class="form-control  fecha validate[required]" value="{$registro.fecha_fin}" id="fecha_fin_actividad" name="fecha_fin_actividad" >
                     </div>
                     <div class="clearfix"></div>
                  </div>
                  <div class="form-group">
                     <label class="control-label col-sm-3"></label>

                     <div class="col-sm-3">                    
                        <select class="form-control validate[required]" id="fecha_fin_hora_actividad" name="fecha_fin_hora_actividad">
                           <option value=""></option>
                           {loop name="$horas"}
                           <option value="{$value.hora}">{$value.hora}</option>
                           {/loop}
                        </select>
                     </div>
                     <div class="col-sm-3">                    
                        <select class="form-control validate[required]" id="fecha_fin_minutos_actividad" name="fecha_fin_minutos_actividad">
                           <option value=""></option>
                           {loop name="$minutos"}
                           <option value="{$value.minutos}">{$value.minutos}</option>
                           {/loop}
                        </select>
                     </div>
                     <div class="col-sm-3">                    

                        <select class="form-control validate[required]" id="fecha_fin_am_actividad" name="fecha_fin_am_actividad" >
                           <option value=""></option>
                           <option value="AM">AM</option>
                           <option value="PM" >PM</option>
                        </select>
                     </div>

                  </div>
               </div>
               <div class="col-sm-6 hide">
                  <div class="form-group">
                     <label class="control-label col-sm-3" for="relacionado">{$L_APP.lbl_actividad_relacionado}</label>
                     <div class="col-sm-9">   
                        {$modulo}
                        <input type='hidden' id="relacionado_acti_vidad" name="relacionado_acti_vidad" value="{$campos[$modulo][1]}">
                     </div>
                  </div>
               </div>
               <div class="col-sm-6 hide">
                  <div class="form-group">
                     <label class="control-label col-sm-3" for="relacionado">{$L_APP.lbl_actividad_relacionado_con}</label>
                     <div class="col-sm-9">  
                        {$count=(count($campos[$modulo][0]))}
                        {if condition="$count < 2"}
                           {loop name="$registro"}  
                           {if condition="$key==$campos[$modulo][0][0]"}
                              <input type="hidden" id="nombre_general" name="nombre_general" value="{$value}"> 
                              <span class="modulo_relacionado_id_nuevo">{$value}</span>
                           {/if}
                           {/loop}
                        {/if}
                        {if condition="$count > 1"}
                           {loop name="$registro"}  
                           {if condition="$key==$campos[$modulo][0][0]"}
                              {$c1=$value}
                           {/if}
                           {/loop}
                           {loop name="$registro"}  
                           {if condition="$key==$campos[$modulo][0][1]"}
                              <span class="modulo_relacionado_id_nuevo">{$c1} {$value}</span>
                              <input type="hidden" id="nombre_general" name="nombre_general" value="{$c1} {$value}"> 
                           {/if}
                           {/loop}
                        {/if}
                        <input type="hidden" id="relacionado_id_actividad" name="relacionado_id_actividad" value="{$registro.id}">
                     </div>
                  </div>
               </div>

               <div class="clearfix"></div>
               <div class="panel-tarea" >   
                  <div class="col-sm-6 ">
                     <div class="form-group">
                        <label class="control-label col-sm-3">{$L_APP.lbl_actividad_prioridad}</label>
                        <div class="col-sm-9"> 
                           <select class="form-control validate[required]" id="prioridad_actividad" name="prioridad_actividad" >
                              <option value="">{$L_APP.lbl_select}</option>
                              {loop name="$listas_actividades.prioridad"}
                              <option value="{$value.id}" {if condition="$registro.prioridad == $value.id"}selected="selected"{/if}>{$value.nombre}</option>
                              {/loop}
                           </select>
                        </div>        
                     </div>
                  </div> 
                  <div class="col-sm-6 hidden">
                     <div class="form-group">
                        <label class="control-label col-sm-3" for="contacto">{$L_APP.lbl_actividad_contacto}</label>
                        <div class="col-sm-9">   
                           <select class="form-control validate[required]" id="cliente_actividad" name="cliente_actividad" >
                              <option value="">{$L_APP.lbl_select}</option>
                              {loop name="$clientes_actividades"}
                              <option value="{$value.id}" {if condition="$registro.cliente == $value.id"}selected="selected"{/if}>{$value.nombre}</option>
                              {/loop} 
                           </select>                
                        </div>
                     </div>
                  </div> 
                  <div class="clearfix"></div>
               </div>
               <div class="panel-llamada" >    
                  <div class="col-sm-6 " >
                     <div class="form-group">
                        <label class="control-label col-sm-3" for="tipo">{$L_APP.lbl_actividad_tipo_llamada}</label>
                        <div class="col-sm-9"> 
                           <select class="form-control validate[required]" id="tipo_llamada_actividad" name="tipo_llamada_actividad" >
                              <option value="">{$L_APP.lbl_select}</option>
                              {loop name="$listas_actividades.tipo_llamada"}
                              <option value="{$value.id}" {if condition=" $registro.tipo_llamada == $value.id"}selected="selected"{/if}>{$value.nombre}</option>
                              {/loop}
                           </select>
                        </div>        
                     </div>
                  </div> 
                  <div class="clearfix"></div>
               </div>
               <div class="panel-reunion" >
                  <div class="col-sm-6 ">
                     <div class="form-group">
                        <label class="control-label col-sm-3" for="lugar">{$L_APP.lbl_actividad_lugar}</label>
                        <div class="col-sm-9">   
                           <input type="text" class="form-control validate[required]"  id="lugar_actividad" name="lugar_actividad" value="{$registro.lugar}">
                        </div>
                     </div>
                  </div> 
                  <div class="clearfix"></div>
               </div>
               <div class="col-sm-6 ">
                  <div class="form-group">
                     <label class="control-label col-sm-3" for="descripcion">{$L_APP.lbl_actividad_descripcion}</label>
                     <div class="col-sm-9">     
                        <textarea class="form-control"  id="descripcion_actividad" name="descripcion_actividad" >{$registro.descripcion}</textarea>
                     </div>
                  </div>
               </div>
               <div class="clearfix"></div>
               <div class="panel-reunion">
                  <div class="col-sm-12">
                     <div class="form-group">
                        <label class="control-label col-sm-2">Agregar Invitado</label>
                        <div class="col-sm-9 no-padding-left">
                           <button type="button" id="btn_agregar_invitado" onclick="agregarInvitado_act();" class="btn btn-primary "><i class="fa fa-plus"></i></button>
                        </div>
                     </div>
                  </div>
                  <div class="col-sm-12">
                     <label class="col-sm-2 control-label">Modulo Invitado</label>
                     <label class="col-sm-5 control-label">Nombre Invitado</label>
                     <label class="col-sm-4 control-label">Email Invitado</label>
                  </div>
                  <div  id="invitados">

                  </div>    </div> 
               <div class="clearfix"></div>


            </div>  
            <div class="modal-footer">
               <button type="button" class="btn btn-default" data-dismiss="modal">{$L_APP.lbl_cancelar}</button>
               <button type="button" class="btn btn-primary" onclick="crear_actividad();">{$L_APP.lbl_boton_guardar}</button>
               <div class="clearfix"></div>
            </div>
         </div>
      </div>    
   </div>
</form>
{/if}
<!-- Modal nuevo DOCUMENTO-->

<div class="modal fade" id="nuevo_documento" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">    
   <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
         <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">{$L_APP.lbl_crear_documento}</h4>
         </div>
         <div class="modal-body">

            <span class="limpiar_nuevo_documento">
               <div class="col-sm-6 no-padding-left paddi_documet">
                  <div class="form-group ">
                     <label class="control-label col-sm-4" for="documentos">{$L_APP.lbl_nombre_documento}</label>
                     <div class="col-sm-7" style="padding-top: 5px;">  
                        <input type="text" class="form-control " id="nombre_nuevo" name="nombre_nuevo" value="">
                     </div>
                  </div>
               </div>
               
            </span>
            <div class="clearfix"></div>

            <div class="col-sm-6 no-padding-left paddi_documet">
               <div class="form-group ">
                  <label class="control-label col-sm-4" for="documentos">{$L_APP.lbl_modulo_documento}</label>
                  <div class="col-sm-7" style="padding-top: 5px;"> 
                     {$modulo}
                     <input type='hidden' id="modulo_relacionado_nuevo" name="modulo_relacionado_nuevo" value="{$campos[$modulo][1]}">
                     <input type='hidden' id="modulo_relacionado_id_nuevo" name="modulo_relacionado_id_nuevo" value="{$registro.id}">
                  </div>
               </div>
            </div>
            <div class="clearfix"></div>

            <span class="limpiar_nuevo_documento">
               <div class="col-sm-6 no-padding-left paddi_documet">
                  <div class="form-group ">
                     <label class="control-label col-sm-4" for="documentos">{$L_APP.lbl_adjunto_documento}</label>
                     <div class="col-sm-7" style="overflow: hidden;padding-top: 4px;">   
                        <input type="file" class="adjunto_documento " id="adjunto_nuevo" name="adjunto_nuevo" >
                     </div>
                  </div>
               </div>
               <div class="col-sm-6 no-padding-left paddi_documet">
                  <div class="form-group ">
                     <label class="control-label col-sm-4" for="documentos">{$L_APP.lbl_version_documento}</label>
                     <div class="col-sm-7" style="padding-top: 5px;">
                        <input type="text" id="version_nuevo" name="version_nuevo" class="form-control  version" value="">             
                     </div>
                  </div>
               </div>
               <div class="clearfix"></div>
               <div class="col-sm-6 no-padding-left hidden">
                  <div class="form-group ">
                     <label class="control-label col-sm-4" for="documentos">{$L_APP.lbl_categoria_documento}</label>
                     <div class="col-sm-7" style="padding-top: 5px;">                    
                        <select class="form-control" id="categoria_nuevo" name="categoria_nuevo">
                           <option value="-1">{$L_APP.lbl_select}</option>
                           {loop name="$listas_documentos.categoria"}
                           <option value="{$value.id}">{$value.nombre}</option>
                           {/loop}
                        </select>               
                     </div>
                  </div>
               </div>
               <div class="clearfix hidden"></div>
               <span id="depende_estado_nuevo" >
                  <div class="col-sm-6 no-padding-left hidden">
                     <div class="form-group ">
                        <label class="control-label col-sm-4" for="documentos">{$L_APP.lbl_estado_documento}</label>
                        <div class="col-sm-7">                    
                           <select class="form-control " id="estado_nuevo" name="estado_nuevo">
                              <option value="-1">{$L_APP.lbl_select}</option>
                              {loop name="$listas_documentos.estado"}
                              <option value="{$value.id}" >{$value.nombre}</option>
                              {/loop}
                           </select>               
                        </div>
                     </div>
                  </div>
                  <div class="clearfix"></div>
               </span>
               <div class="clearfix"></div>
               <div class="col-sm-6 no-padding-left paddi_documet">
                  <div class="form-group ">
                     <label class="control-label col-sm-4" for="documentos">{$L_APP.lbl_descripcion_documento}</label>
                     <div class="col-sm-7"> 
                        <textarea class="form-control" id="descripcion_nuevo" name="descripcion_nuevo" ></textarea>
                     </div>
                  </div>
               </div>
               <div class="clearfix"></div>
            </span>
            <div class="clearfix"></div>

         </div>
         <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">{$L_APP.lbl_cancelar}</button>
            <button type="button" class="btn btn-primary" onclick="crear_documento();">{$L_APP.lbl_boton_guardar}</button>
         </div>
      </div>
   </div>    
</div>



{if condition="$modulo == 'servicios' || $modulo == 'cuentas'"}
   <!-- MODAL CASOS  -->

   <div class="modal fade" id="nuevo_caso" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">    
      <div class="modal-dialog modal-lg" role="document">
         <div class="modal-content">
            <div class="modal-header">
               <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
               <h4 class="modal-title" id="myModalLabel">Nuevo Caso</h4>
            </div>

            <form></form>

            <div class="modal-body">

               <form class="form-horizontal" id="form_caso" role="form">

                  <div class="col-sm-6 no-padding-left ">
                     <div class="form-group">
                        <label class="control-label col-sm-4" >{$L_MOD.lbl_numero}</label>
                        <label class="control-label col-sm-8"> {$registro.id}</label>
                     </div>
                  </div>
                  <div class="clearfix"></div>

                  <div class="col-sm-6 no-padding-left">
                     <div class="form-group">
                        <label class="control-label col-sm-4" for="tipo_id">{$L_MOD.lbl_tipo}</label>

                        <div class="col-sm-7 ">                    
                           <select class="form-control validate[required]" id="tipo_id_c" name="tipo_id">
                              <option value="">{$L_APP.lbl_select}</option>
                              {loop name="$caso_listasM.tipo"}
                              <option value="{$value.id}" >{$value.nombre}</option>
                              {/loop}
                           </select>
                        </div>

                     </div>
                  </div>
                  <div class="col-sm-6 no-padding-left">
                     <div class="form-group">
                        <label class="control-label col-sm-4" for="origen_id">{$L_MOD.lbl_origen}</label>

                        <div class="col-sm-7 ">                    
                           <select class="form-control validate[required]" id="origen_id" name="origen_id">
                              <option value="">{$L_APP.lbl_select}</option>
                              {loop name="$caso_listasM.origen"}
                              <option value="{$value.id}" >{$value.nombre}</option>
                              {/loop}
                           </select>
                        </div>

                     </div>
                  </div>
                  <div class="clearfix"></div>

                  <div class="col-sm-6 no-padding-left">
                     <div class="form-group">
                        <label class="control-label col-sm-4" for="cuenta_id">{$L_MOD.lbl_cuenta}</label>

{if condition="$modulo == 'servicios'"}

                        <div class="col-sm-7 ">                    
                           <select class="form-control validate[required]" id="cuenta_id" name="cuenta_id">
                              <option value="">{$L_APP.lbl_select}</option>
                              {loop name="$cuenta"}
                              <option value="{$value.id}" {if condition="$registro.cuenta_id == $value.id"}selected="selected"{/if}>{$value.nombres}</option>
                              {/loop}
                           </select>
                        </div>
{else}
                      <div class="col-sm-7 ">                    
                           <select class="form-control validate[required]" id="cuenta_id" name="cuenta_id">
                              <option value="{$registro.id}" >{$registro.nombres}</option>
                           </select>
                        </div>
{/if}
                     </div>
                  </div>
                  <div class="col-sm-6 no-padding-left">
                     <div class="form-group">
                        <label class="control-label col-sm-4" for="prioridad_id">{$L_MOD.lbl_prioridad}</label>


                        <div class="col-sm-7 ">                    
                           <select class="form-control validate[required]" id="prioridad_id" name="prioridad_id">
                              <option value="">{$L_APP.lbl_select}</option>
                              {loop name="$caso_listasM.prioridad"}
                              <option value="{$value.id}" >{$value.nombre}</option>
                              {/loop}
                           </select>
                        </div>

                     </div>
                  </div>
                  <div class="clearfix"></div>

                  <div class="col-sm-6 no-padding-left">
                     <div class="form-group">
                        <label class="control-label col-sm-4" for="servicio_id">{$L_MOD.lbl_servicio}:</label>
{if condition="$modulo == 'servicios'"}

                        <div class="control-label col-sm-7 ">   
                           <input type="hidden" value="{$registro.id}" id="servicio_id" name="servicio_id" >
                           {$registro.id} - {$registro.tipo_servicio_str}
                        </div>
{else}
                        <div class="col-sm-7 ">                    
                           <select class="form-control validate[required]" id="servicio_id" name="servicio_id">
                              <option value="">{$L_APP.lbl_select}</option>
                              {loop name="$servicios"}
                              <option value="{$value.id}" >{$value.servicios}</option>
                              {/loop}
                           </select>
                        </div>
   {/if}
                     </div>
                  </div>
                  <div class="col-sm-6 no-padding-left">
                     <div class="form-group">
                        <label class="control-label col-sm-4" for="estado_id">{$L_MOD.lbl_estado}</label>

                        <div class="col-sm-7 ">                    
                           <select class="form-control validate[required]" id="estado_id" name="estado_id">
                              <option value="">{$L_APP.lbl_select}</option>
                              {loop name="$caso_listasM.estado"}
                              <option value="{$value.id}" >{$value.nombre}</option>
                              {/loop}
                           </select>
                        </div>

                     </div>
                  </div>
                  <div class="clearfix"></div>

                  <div class="col-sm-6 no-padding-left">
                     <div class="form-group">
                        <label class="control-label col-sm-4" for="asunto">{$L_MOD.lbl_asunto}</label>

                        <div class="col-sm-8 ">      
                           <input type="text" class="form-control validate[required]" value="" id="asunto" name="asunto" placeholder="{$L_MOD.phl_txt_asunto}">
                        </div>

                     </div>
                  </div>
                  <div class="clearfix"></div>

                  <div class="col-sm-6 no-padding-left">
                     <div class="form-group">
                        <label class="control-label col-sm-4" for="descripcion">{$L_MOD.lbl_descripcion}</label>

                        <div class="col-sm-8 ">      
                           <textarea class="form-control" id="descripcion" name="descripcion" rows="3"></textarea>
                        </div>

                     </div>
                  </div>

                  <div class="col-sm-6 no-padding-left">
                     <div class="form-group">
                        <label class="control-label col-sm-4" for="resolucion">{$L_MOD.lbl_resolucion}:</label>


                        <div class="col-sm-8 ">      
                           <textarea class="form-control" id="resolucion" name="resolucion" rows="3"></textarea>
                        </div>

                     </div>
                  </div>
                  <div class="clearfix"></div>

                  <div class="col-sm-6 no-padding-left">
                     <div class="form-group">
                        <label class="control-label col-sm-4" for="asesor_asignado_id">
                           {$L_MOD.lbl_asesor_asignado}</label>
{if condition="$modulo == 'servicios'"}

                        <div class="col-sm-7 ">                    
