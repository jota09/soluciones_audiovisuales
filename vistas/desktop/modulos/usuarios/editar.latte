<div class="panel panel-primary">
  <div class="panel-heading">{$L_MOD.lbl_datos_acceso}</div>
  <div class="panel-body">

    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label for="nombre_usuario" class="control-label col-sm-4">{$L_MOD.lbl_editar_nombre_usuario}</label>
          <div class="col-sm-8 editar_js">
            <input type="text" class="form-control validate[required]" value="{$registro.nombre_usuario}" id="nombre_usuario" name="nombre_usuario" placeholder="{$L_MOD.phl_txt_nombre_usuario}">
          </div>
                              <label class="control-label col-sm-8 ver_js" >{$registro.nombre_usuario}</label>

        </div>
      </div>
      <div class="col-sm-6 ">
        {if condition="$usuario->getPerfilId()==1"}
          <div class="form-group">
            <label class="control-label col-sm-4">{$L_MOD.lbl_activo}</label>
            <div class="col-sm-8 editar_js">                        
              <select class="form-control" id="activo" name="activo">
                <option value="1" {if condition="!empty($registro.activo) || empty($registro.id)"}selected{/if}>Si</option>
                <option value="0" {if condition="empty($registro.activo) && !empty($registro.id)"}selected{/if}>No</option>
              </select>
            </div>
            <div class="col-sm-8 ver_js">                        
               {if condition="!empty($registro.activo) || empty($registro.id)"}<label class="control-label col-sm-8 ver_js" >Si</label>{/if}
               {if condition="empty($registro.activo) && !empty($registro.id)"}<label class="control-label col-sm-8 ver_js" >No</label>{/if}

            </div>
          </div>
        {/if}
      </div>
    </div>
    <div class="row ">
      <div class="col-sm-6 editar_js">
        <div class="form-group">
          <label for="contrasenia" class="control-label col-sm-4">{$L_MOD.lbl_editar_contrasenia}</label>
          <div class="col-sm-8">
            <input type="password" class="form-control {if condition="empty($registro.id)"}validate[required,custom[minUnaMayus],custom[minUnNumero],minSize[8],funcCall[validarContrasenias]{else}validate[funcCall[validarContrasenias]]{/if}" value="" id="contrasenia" name="contrasenia" placeholder="{$L_MOD.phl_editar_contrasenia}">
          </div>    
        </div>    
      </div>
      <div class="col-sm-6 editar_js">
        <div class="form-group">
          <label for="contrasenia2" class="control-label col-sm-4 ">{$L_MOD.lbl_editar_contrasenia2}</label>
          <div class="col-sm-8">
            <input type="password" class="form-control {if condition="empty($registro.id)"}validate[required,funcCall[validarContrasenias]{else}validate[funcCall[validarContrasenias]]{/if}" value="" id="contrasenia2" name="contrasenia2" placeholder="{$L_MOD.phl_editar_contrasenia2}">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
