<div class="panel panel-primary">
  <div class="panel-heading">{$L_APP.lbl_datos_basicos}</div>
  <div class="panel-body">

    <div class="row">
      <div class="col-sm-6 ">
        <div class="form-group">
          <label for="nombres" class="control-label col-sm-4">{$L_MOD.lbl_editar_nombre}</label>
          <div class="col-sm-8 editar_js">
            <input type="text" class="form-control validate[required]" value="{$registro.nombres}" id="nombres" name="nombres" placeholder="{$L_MOD.phl_txt_nombre}">
          </div>
          <label class="control-label col-sm-8 ver_js" >{$registro.nombres}</label>
        </div>    
      </div>
        {if condition="$usuario->getPerfilId()==1"}
      <div class="col-sm-6 ">
          <div class="form-group">
            <label class="control-label col-sm-4">{$L_MOD.lbl_editar_perfil}</label>
            <div class="col-sm-8 editar_js">
              <select class="form-control required validate[required]" id="perfil_id" name="perfil_id">
                <option value="0">{$L_MOD.sel_editar_perfil}</option>
                {loop name="$perfiles"}
                <option value="{$value.id}" {if condition="$registro.perfil_id == $value.id"}selected="selected"{/if}>{$value.nombre}</option>
                {/loop}
              </select>
            </div>
       {loop name="$perfiles"}
         {if condition="$registro.perfil_id == $value.id"}
          <label class="control-label col-sm-8 ver_js" >{$value.nombre}</label>
        {/if}
        {/loop}

          </div>
      </div>
        {/if}
    </div>
    <div class="row">
      <div class="col-sm-6 ">
        <div class="form-group">
          <label for="apellidos" class="control-label col-sm-4">{$L_MOD.lbl_editar_apellido}</label>
          <div class="col-sm-8 editar_js">
            <input type="text" class="form-control validate[required]" value="{$registro.apellidos}" id="apellidos" name="apellidos" placeholder="{$L_MOD.phl_txt_apellido}">
          </div>
       <label class="control-label col-sm-8 ver_js" >{$registro.apellidos}</label>

        </div>    
      </div>
      <div class="col-sm-6 ">
        <div class="form-group">
          <label for="numero_documento" class="control-label col-sm-4">{$L_MOD.lbl_numero_documento}</label>
          <div class="col-sm-8 editar_js">
            <input type="text" class="form-control validate[required]" value="{$registro.numero_documento}" id="numero_documento" name="numero_documento" placeholder="{$L_MOD.phl_txt_numero_documento}" onkeypress="return soloNumeros(event);">
          </div>
          <label class="control-label col-sm-8 ver_js" >{$registro.numero_documento}</label>
        </div>    
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6 hidden">
        <div class="form-group">
          <label for="correo" class="control-label col-sm-4">{$L_MOD.lbl_area}</label>
          <div class="col-sm-8 editar_js">
            <select class="form-control validate[required] " id="area_id" name="area_id">
              <option value="">{$L_APP.lbl_select}</option>
              {loop name="$listasM.area"}
              <option value="{$value.id}" {if condition="$registro.area_id == $value.id"}selected="selected"{/if}>{$value.nombre}</option>
              {/loop}
            </select>
          </div>
          {loop name="$listasM.area"}
        {if condition="$registro.area_id == $value.id"}
          <label class="control-label col-sm-8 ver_js" >{$value.nombre}</label>
        {/if}
        {/loop}
        </div>
      </div>

    </div>

    <div class="row ">
      <div class="col-sm-6 ">
        <div class="form-group">
          <label for="correo" class="control-label col-sm-4">{$L_MOD.lbl_editar_correo}</label>
          <div class="col-sm-8 editar_js">
            <input type="email" class="form-control validate[required,custom[email]]" value="{$registro.correo}" id="correo" name="correo" placeholder="{$L_MOD.phl_txt_correo}">
          </div>
        <label class="control-label col-sm-8 ver_js" >{$registro.correo}</label>
        </div>
      </div>
      <div class="col-sm-6 ">
        <div class="form-group">
          <label for="avatar" class="control-label col-sm-4">{$L_MOD.lbl_avatar}</label>
          <img width="140" height="80" class="img-rounded ver_js" alt="{$usuario->getNombreCompleto()}" src="uploads/img_usuario/{$usuario->getAvatar()}" style="position: absolute;">
          <div class="col-sm-7 editar_js" style="overflow: hidden;padding-top: 4px;">

            <input type="file" class="validate[funcCall[validarMIME[image/jpeg|image/png|image/jpg]]]" id="avatar" name="avatar">

          </div> 
        </div>    
      </div>
    </div>

    <div class="row ">
      <div class="col-sm-6 ">
<!--        <div class="form-group">
          <label for="informa_a_id" class="control-label col-sm-4">{$L_MOD.lbl_informa_a}</label>
          <div class="col-sm-8">
            <select class="form-control  " id="informa_a_id" name="informa_a_id">
              <option value="">{$L_APP.lbl_select}</option>
              {loop name="$informa_a"}
              <option value="{$value.id}" {if condition="$registro.informa_a_id == $value.id"}selected="selected"{/if}>{$value.nombres}</option>
              {/loop}
            </select>
          </div>
        </div>-->
      </div>
      <div class="col-sm-6 hidden">
        <div class="form-group">
          <label for="cargo_id" class="control-label col-sm-4">{$L_MOD.lbl_cargo}</label>
          <div class="col-sm-8 editar_js">
            <select class="form-control validate[required] " id="cargo_id" name="cargo_id">
              <option value="">{$L_APP.lbl_select}</option>
              {loop name="$listasM.cargo_id"}
              <option value="{$value.id}" {if condition="$registro.cargo_id == $value.id"}selected="selected"{/if}>{$value.nombre}</option>
              {/loop}
            </select>
          </div>
            {loop name="$listasM.cargo_id"}
        {if condition="$registro.cargo_id == $value.id"}
          <label class="control-label col-sm-8 ver_js" >{$value.nombre}</label>
        {/if}
        {/loop}
        </div>
      </div>
    </div>

    <div class="row ">
      <div class="col-sm-6 ">
        <div class="form-group">
          <label for="fecha_vinculacion" class="control-label col-sm-4">{$L_MOD.lbl_fecha_vinculacion}</label>
          <div class="col-sm-8 editar_js">
            <div class="input-group">
              <input type="text" class="form-control fecha" value="{$registro.fecha_vinculacion}" id="fecha_vinculacion" name="fecha_vinculacion" placeholder="{$L_MOD.phl_txt_fecha_vinculacion}">
              <span class="input-group-addon">
                <span class="fa fa-calendar "></span>
              </span>
            </div>
          </div>
           <label class="control-label col-sm-8 ver_js" >{$registro.fecha_vinculacion}</label>

        </div>
      </div>
      <div class="col-sm-6 hide">
        <div class="form-group">
          <label for="fecha_retiro" class="control-label col-sm-4">{$L_MOD.lbl_fecha_retiro}</label>
          <div class="col-sm-8 editar_js">
            <div class="input-group">
              <input type="text" class="form-control fecha validate[required,custom[date]{if condition=" $registro.id == ''"},funcCall[comparaConFechaActual[#fecha_retiro]]{/if}]" value="{$registro.fecha_retiro}" id="fecha_retiro" name="fecha_retiro" placeholder="{$L_MOD.phl_txt_fecha_retiro}">
              <span class="input-group-addon">
                <span class="fa fa-calendar"></span>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row " style="margin-top: 20px;">
      <div class="col-sm-6 ">
        <div class="form-group">
          <label for="registro_vacaciones" class="control-label col-sm-4">{$L_MOD.lbl_registro_vacaciones}</label>
          <div class="col-sm-8 editar_js">
            <textarea class="form-control" id="registro_vacaciones" name="registro_vacaciones" rows="6">{$registro.registro_vacaciones}</textarea>
          </div>
         <label class="control-label col-sm-8 ver_js" >{$registro.registro_vacaciones}</label>

        </div>
      </div>
      <div class="col-sm-6 ">
        <div class="form-group">
          <label for="carpeta_t_h" class="control-label col-sm-4">{$L_MOD.lbl_carpeta_t_h}</label>
          <div class="col-sm-8 editar_js">
            <input type="text" class="form-control" value="{$registro.carpeta_t_h}" id="carpeta_t_h" name="carpeta_t_h" placeholder="{$L_MOD.phl_txt_carpeta_t_h}">
          </div>
          <a class="control-label col-sm-8 ver_js" target="_blank" href="{$registro.carpeta_t_h}">{$registro.carpeta_t_h}</a> 
        </div>
      </div>
    </div>

  </div>
</div>

