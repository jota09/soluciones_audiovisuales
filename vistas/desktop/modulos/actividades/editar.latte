<div class="panel panel-primary ">
   <div class="panel-heading">{$L_MOD.lbl_descripcion_comercial}</div>
   <div class="panel-body">           
      <div class="col-sm-12 no-padding-left">
         <div class="form-group">
            <label class="control-label col-sm-3" for="descripcion">{$L_MOD.lbl_descripcion}</label>
            <div class="col-sm-9 editar_js">     
               <textarea class="form-control"  id="descripcion" name="descripcion" >{$registro.descripcion}</textarea>
            </div>
            <label class="control-label col-sm-8 ver_js" >{$registro.descripcion}</label>

         </div>
      </div>
   </div>
</div>