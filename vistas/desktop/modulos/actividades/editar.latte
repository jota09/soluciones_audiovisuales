         <div class="form-group">
            <label class="control-label col-sm-3" for="tipo">{$L_MOD.lbl_tipo_llamada}</label>
            <div class="col-sm-9 editar_js"> 
               <select class="form-control addreq" id="tipo_llamada" name="tipo_llamada" >
                  <option value="-1">{$L_APP.lbl_select}</option>
                  {loop name="$listas.tipo_llamada"}
                  <option value="{$value.id}" {if condition=" $registro.tipo_llamada == $value.id"}selected="selected"{/if}>{$value.nombre}</option>
