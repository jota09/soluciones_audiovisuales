<!-- Datos Basicos-->
<div class="panel panel-primary">
    <div class="panel-heading">{$L_APP.lbl_datos_basicos}</div>
    <div class="panel-body">
        <div class="col-sm-6 no-padding-left">
            <div class="form-group">
                <label class="control-label col-sm-3" for="naturaleza_id">{$L_MOD.lbl_naturaleza_id}</label>
                <div class="col-sm-7 editar_js">                    
                    <select class="form-control validate[required]" id="naturaleza_id" name="naturaleza_id">
                        <option value="">{$L_APP.lbl_select}</option>
                        {loop name="$listasM.naturaleza"}
                        <option value="{$value.id}" {if condition="$registro.naturaleza_id == $value.id"}selected="selected"{/if}>{$value.nombre}</option>
                        {/loop}
                    </select>
                </div>
                {loop name="$listasM.naturaleza"}
                {if condition="$registro.naturaleza_id == $value.id"}
                    <label class="control-label col-sm-7 ver_js" >{$value.nombre}</label>
                {/if}
                {/loop}

            </div>
        </div>
        <div class="col-sm-6 no-padding-left ">
            <div class="form-group">
                <label class="control-label col-sm-3" for="tipo_cuenta_id">{$L_MOD.lbl_tipo_cliente}</label>
                <div class="col-sm-7 editar_js">                    
                    <select class="form-control validate[required]" id="tipo_cuenta_id" name="tipo_cuenta_id">
                        {loop name="$listasM.tipo_cuenta"}
                        <option value="{$value.id}" {if condition="$registro.tipo_cuenta_id == $value.id"}selected="selected"{/if}>{$value.nombre}</option>
                        {/loop}
                    </select>
                </div>
                {loop name="$listasM.tipo_cuenta"}
                {if condition="$registro.tipo_cuenta_id == $value.id"}
                    <label class="control-label col-sm-7 ver_js" >{$value.nombre}</label>
                {/if}
                {/loop}

            </div>
        </div>
        <div class="clearfix"></div>

        <div class="col-sm-6 no-padding-left">
            <div class="form-group cliente_natural">
                <label class="control-label col-sm-3" for="nombres">{$L_MOD.lbl_nombres}</label>
                <div class="col-sm-7 editar_js">                    
                    <input type="text" class="form-control validate[required]" value="{$registro.nombres}" id="nombres" name="nombres" placeholder="{$L_MOD.phl_txt_nombres}">
                </div>
                <label class="control-label col-sm-7 ver_js" >{$registro.nombres}</label>

            </div>
            <div class="form-group cliente_juridico">
                <label class="control-label col-sm-3" for="nombre_comercial">{$L_MOD.lbl_nombre_comercial}</label>
                <div class="col-sm-7 editar_js">                    
                    <input type="text" class="form-control validate[required]" value="{$registro.nombre_comercial}" id="nombre_comercial" name="nombre_comercial" placeholder="{$L_MOD.phl_txt_nombre_comercial}">
                </div>
                <label class="control-label col-sm-7 ver_js" >{$registro.nombre_comercial}</label>

            </div>
        </div>
        <div class="col-sm-6 no-padding-left">
            <div class="form-group">
                <label class="control-label col-sm-3" for="tipo_documento_id">{$L_MOD.lbl_tipo_documento_id}</label>
                <div class="col-sm-7 editar_js">                    
                    <select class="form-control validate[required]" id="tipo_documento_id" name="tipo_documento_id">
                        <option value="">{$L_APP.lbl_select}</option>
                        {loop name="$listasM.tipo_de_documento"}
                        <option value="{$value.id}" {if condition="$registro.tipo_documento_id == $value.id"}selected="selected"{/if}>{$value.nombre}</option>
                        {/loop}
                    </select>
                </div>
                {loop name="$listasM.tipo_de_documento"}
                {if condition="$registro.tipo_documento_id == $value.id"}
                    <label class="control-label col-sm-7 ver_js" >{$value.nombre}</label>
                {/if}
                {/loop}

            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-sm-6 no-padding-left">
            <div class="form-group cliente_natural">
                <label class="control-label col-sm-3" for="apellidos">{$L_MOD.lbl_apellidos}</label>
                <div class="col-sm-7 editar_js">                    
                    <input type="text" class="form-control validate[required]" value="{$registro.apellidos}" id="apellidos" name="apellidos" placeholder="{$L_MOD.phl_txt_apellidos}">
                </div>
                <label class="control-label col-sm-7 ver_js" >{$registro.apellidos}</label>

            </div>
            <div class="form-group cliente_juridico">
                <label class="control-label col-sm-3" for="razon_social">{$L_MOD.lbl_razon_social}</label>
                <div class="col-sm-7 editar_js">                    
                    <input type="text" class="form-control" value="{$registro.razon_social}" id="apellidos" name="razon_social" placeholder="{$L_MOD.phl_txt_razon_social}">
                </div>
                <label class="control-label col-sm-7 ver_js" >{$registro.razon_social}</label>

            </div>
        </div>
        <div class="col-sm-6 no-padding-left">
            <div class="form-group">
                <label class="control-label col-sm-3" for="num_documento">{$L_MOD.lbl_num_documento}</label>
                <div class="col-sm-7 editar_js">                    
                    <input type="text" class="form-control validate[required]" value="{$registro.num_documento}" id="num_documento" name="num_documento" placeholder="{$L_MOD.phl_txt_num_documento}" onkeypress="return soloNumeros(event);" >
                </div>
                <label class="control-label col-sm-7 ver_js" >{$registro.num_documento}</label>

            </div>
        </div>
        <div class="col-sm-6 no-padding-left">
            <div class="form-group">
                <label class="control-label col-sm-3" for="segmento">{$L_MOD.lbl_segmento}</label>
                <div class="col-sm-7 editar_js">             
                    <select class="form-control validate[required]" id="segmento" name="segmento_id">
                        <option value="">{$L_APP.lbl_select}</option>
                        {loop name="$listasM.segmento"}
                        <option value="{$value.id}" {if condition="$registro.segmento_id == $value.id"}selected="selected"{/if}>{$value.nombre}</option>
                        {/loop}
                    </select>          
                </div>
                {loop name="$listasM.segmento"}
                {if condition="$registro.segmento_id == $value.id"}
                    <label class="control-label col-sm-7 ver_js" >{$value.nombre}</label>
                {/if}
                {/loop}               

            </div>
        </div>
        <div class="col-sm-6 no-padding-left">
        <div class="form-group">
          <label for="avatar" class="control-label col-sm-3">{$L_MOD.lbl_avatar}</label>
          
          {if condition="!empty($registro.avatar)"}
          <img width="140" height="80" class="img-rounded ver_js" src="uploads/img_cuenta/{$registro.avatar}" style="position: absolute;">
          {else}
          <img width="140" height="80" class="img-rounded ver_js" src="uploads/img_cuenta/sin_avatar.jpg" style="position: absolute;">
          {/if}
         <div class="col-sm-7 editar_js" style="overflow: hidden;padding-top: 4px;">
         <input type="file" class="validate[funcCall[validarMIME[image/jpeg|image/png|image/jpg]]]" id="avatar" name="avatar">
          </div> 
        </div>    
      </div>

        <div class="clearfix"></div>
        <div class="col-sm-6 no-padding-left">
            <div class="form-group">
                <label class="control-label col-sm-3" for="descripcion">{$L_MOD.lbl_descripcion}</label>
                <div class="col-sm-9 editar_js">      
                    <textarea class="form-control" id="descripcion" name="descripcion" rows="6">{$registro.descripcion}</textarea>
                </div>
                <label class="control-label col-sm-9 ver_js" >{$registro.descripcion}</label>

            </div>
        </div>

    </div>
</div>

<!-- Ubicacion-->
