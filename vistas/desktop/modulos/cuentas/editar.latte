                    <label class="control-label col-sm-7 ver_js" >{$value.nombre}</label>
                {/if}
                {/loop}

            </div>
        </div>
        <div class="col-sm-6 no-padding-left">
            <div class="form-group">
                <label class="control-label col-sm-3" for="descripcion_estado">{$L_MOD.lbl_descripcion_estado}</label>
                <div class="col-sm-9 editar_js">                    
                    <textarea class="form-control" id="descripcion_estado" name="descripcion_estado" rows="3">{$registro.descripcion_estado}</textarea>
                </div>
                <label class="control-label col-sm-9 ver_js" >{$registro.descripcion_estado}</label>

            </div>
        </div>
        <div class="col-sm-6 no-padding-left">
            <div class="form-group">
                <label class="control-label col-sm-3" for="descripcion_toma_contacto">{$L_MOD.lbl_descripcion_toma_contacto}</label>
                <div class="col-sm-9 editar_js">                    
                    <textarea class="form-control" id="descripcion_toma_contacto" name="descripcion_toma_contacto" rows="3">{$registro.descripcion_toma_contacto}</textarea>
                </div>
                <label class="control-label col-sm-9 ver_js" >{$registro.descripcion_toma_contacto}</label>

