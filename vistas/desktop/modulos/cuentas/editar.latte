                        {/loop}
                    </select>
                </div>
                {loop name="$listasM.estado"}
                {if condition="$registro.estado_id == $value.id"}
                    <label class="control-label col-sm-7 ver_js" >{$value.nombre}</label>
                {/if}
                {/loop}

            </div>
        </div>
        <div class="col-sm-6 no-padding-left">
            <div class="form-group">
                <label class="control-label col-sm-3" for="toma_contacto_id">{$L_MOD.lbl_toma_contacto_id}</label>
                <div class="col-sm-7 editar_js">                    
                    <select class="form-control validate[required]" id="toma_contacto_id" name="toma_contacto_id">
                        <option value="">{$L_APP.lbl_select}</option>
                        {loop name="$listasG.toma_de_contacto"}
