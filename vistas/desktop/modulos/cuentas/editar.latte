<!-- Comercial-->
<div class="panel panel-primary">
    <div class="panel-heading">{$L_APP.lbl_comercial}</div>
    <div class="panel-body">
        <div class="col-sm-6 no-padding-left">
            <div class="form-group">
                <label class="control-label col-sm-3" for="asesor_asignado_id">{$L_MOD.lbl_asesor_asignado}</label>
                <div class="col-sm-7 editar_js">                    
                    <select class="form-control validate[required]" id="asesor_asignado_id" name="asesor_asignado_id">
                        {loop name="$asesores"}
                        {if condition="!empty($registro.id)"} 
                            <option value="{$value.id}" {if condition="$registro.asesor_asignado_id == $value.id"}selected="selected"{/if}>{$value.nombres} {$value.apellidos}</option>
                        {else}
                            <option value="{$value.id}" {if condition="$usuario->getId() == $value.id"} selected="selected" {/if}>{$value.nombres} {$value.apellidos}</option>
                        {/if}
                        {/loop}
                    </select>
                </div>
                {loop name="$asesores"}
                {if condition="$registro.asesor_asignado_id == $value.id"}
                    <label class="control-label col-sm-7 ver_js" >{$value.nombres} {$value.apellidos}</label>
                {/if}
                {/loop}
            </div>
        </div>

        <div class="clearfix"></div>
        <div class="col-sm-6 no-padding-left">
            <div class="form-group">
                <label class="control-label col-sm-3" for="estado_id">{$L_MOD.lbl_estado}</label>
                <div class="col-sm-7 editar_js">                    
                    <select class="form-control validate[required]" id="estado_id" name="estado_id">
