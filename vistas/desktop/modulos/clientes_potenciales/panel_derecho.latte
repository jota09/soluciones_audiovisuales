<script type="text/javascript" src="librerias/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="assets/js/general/panel_derecho.js"></script>
<script type="text/javascript" src="assets/js/modulos/{$modulo}/panel_derecho.js"></script>

<!--  ANALITICA --> 
<div class="panel panel-primary">
   <div class="panel-heading">{$L_APP.lbl_analitica}</div>               
   <div class="panel-body">

      <div class="col-sm-12 no-padding">
         <div class="text-rosado " style="font-size: 20px; font-weight: bolder; ">
            {$L_MOD.lbl_tiempo_transcurrido} </div></div>

      <div class="col-sm-12 no-padding-left">

         <div id="dias"  class=" col-sm-7 text-right text-rosado no-padding-right" style="font-size: 80px; font-weight: bolder;"> 
           {$t_transcurrido->days}

         </div>
         <div class="col-sm-5 text-left texto_transcurrido no-padding-left text-left" > DÃ­as </div>

      </div>

   </div>
</div>

<!--  RELACIONES --> 
<div class="panel panel-primary" >
   <div class="panel-heading">{$L_APP.lbl_relaciones}</div>
   <div class="panel-body" style="padding: 5px;">
      {include="general/panel_derecho/menu_actividades"}

      <div class="col-sm-12 no-padding documentos">
         <label class="control-label col-sm-9 no-padding-right" for="Documentos" data-toggle="modal" data-target="#lista_documentos">
            <i class="fa fa-file-o text-rosado"></i> 
            <a>{$L_APP.lbl_documentos}</a> ( <span id="docs">{$docs}</span> )</label>

         <label class="control-label col-sm-3 no-padding-right" for="Documentos">
            <i class="fa fa-plus "  data-toggle="modal" data-target="#nuevo_documento" id="3"></i></label>
      </div>
      
   </div>
</div>   

<!--  DESCENDIENTES --> 

{loop name="$decendientes"}
<div class="panel panel-primary" >
   <div class="panel-heading">{$L_APP.lbl_descendientes}</div>
   <div class="panel-body" style="padding: 5px;">
      <div class="col-sm-12 no-padding ">
         <label class="control-label col-sm-9 no-padding-right" >
            <i class="fa fa-folder text-rosado"></i>&nbsp;&nbsp; 
            <a href="index.php?modulo=cuentas&accion=editar&registro={$value.cuenta_id}">{$value.cuenta}</a></label>
      </div>
      {if condition="!empty($value.contacto_id) OR $value.contacto_id == 'null'"}
      <div class="col-sm-12 no-padding ">
         <label class="control-label col-sm-9 no-padding-right" >
            <i class="fa fa-users text-rosado"></i>&nbsp;&nbsp;
            <a href="index.php?modulo=contactos&accion=editar&registro={$value.contacto_id}">{$value.contacto}</a></label>
      </div>
      {/if}
      {if condition="!empty($value.oportunidad_id) OR $value.oportunidad_id == 'null'"}
         <div class="col-sm-12 no-padding ">
            <label class="control-label col-sm-9 no-padding-right">
               <i class="fa fa-usd text-rosado"></i>&nbsp;&nbsp;
               <a href="index.php?modulo=oportunidades&accion=editar&registro={$value.oportunidad_id}">{$value.oportunidad}</a></label>
         </div>
      {/if}
   </div>
</div>  
{/loop}


